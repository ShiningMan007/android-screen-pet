<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timepicker">
    </TimePicker>

    <Button
        android:id="@+id/btn_turn_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_turn_off"
        android:layout_below="@+id/textview_update"
        android:text="Turn on alarm"
        android:textColor="@color/text"
        android:textSize="@dimen/text_view_size" />

    <Button
        android:id="@+id/btn_turn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textview_update"
        android:text="Turn off alarm"
        android:textColor="@color/text"
        android:textSize="@dimen/text_view_size" />

    <TextView
        android:id="@+id/textview_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timepicker"
        android:layout_centerHorizontal="true"
        android:text="Do you want to set alarm?"
        android:textColor="@color/text"
        android:textSize="@dimen/text_view_size" />

    <Spinner
        android:id="@+id/spinner_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_turn_on" />


</RelativeLayout>